                    <div class="mt-2 flex flex-wrap gap-2">
                        <button class="quick-select-btn bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium py-1.5 px-3 rounded-full" data-days="7">Last 7 Days</button>
                        <button class="quick-select-btn bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium py-1.5 px-3 rounded-full" data-days="30">Last 30 Days</button>
                        <button class="quick-select-btn bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium py-1.5 px-3 rounded-full" data-days="90">Last 90 Days</button>
                        <button id="this-year-btn" class="bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium py-1.5 px-3 rounded-full">This Year</button>
                    </div>
                </div>
                <div class="mt-8 flex justify-end space-x-3">
                    <button data-date-modal-close class="bg-white hover:bg-gray-100 text-gray-700 font-semibold py-2 px-4 border border-gray-300 rounded-lg shadow-sm">Cancel</button>
                    <button id="apply-date-range" class="bg-dark-blue hover:bg-opacity-90 text-white font-semibold py-2 px-4 rounded-lg shadow-sm" style="background-color: var(--dark-blue);">Apply Range</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const vehicleModal = document.getElementById('vehicleModal');
        const openModalTriggers = document.querySelectorAll('[data-modal-trigger]');
        const closeModalButtons = document.querySelectorAll('[data-modal-close]');

        const openModal = () => vehicleModal.classList.remove('hidden');
        const closeModal = () => vehicleModal.classList.add('hidden');

        openModalTriggers.forEach(trigger => {
            trigger.addEventListener('click', openModal);
        });

        closeModalButtons.forEach(button => {
            button.addEventListener('click', closeModal);
        });

        vehicleModal.addEventListener('click', (event) => {
            // Close modal if overlay is clicked
            if (event.target === vehicleModal) {
                closeModal();
            }
        });

        // Date Range Modal Logic
        const dateRangeModal = document.getElementById('dateRangeModal');
        const dateRangeSelect = document.getElementById('date-range');
        const closeDateModalButtons = document.querySelectorAll('[data-date-modal-close]');
        const quickSelectButtons = document.querySelectorAll('.quick-select-btn');
        const thisYearButton = document.getElementById('this-year-btn');
        const applyDateRangeButton = document.getElementById('apply-date-range');
        const startDateInput = document.getElementById('start-date');
        const endDateInput = document.getElementById('end-date');
        
        // User Menu Dropdown Logic
        const userMenuButton = document.getElementById('user-menu-button');
        const userMenu = document.getElementById('user-menu');

        userMenuButton.addEventListener('click', () => {
            userMenu.classList.toggle('hidden');
        });
        
        // Close dropdown if clicked outside
        document.addEventListener('click', (event) => {
            if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });

        const openDateModal = () => dateRangeModal.classList.remove('hidden');
        const closeDateModal = () => {
            dateRangeModal.classList.add('hidden');
            // If user cancels, reset dropdown to what it was before "Custom Range"
            if (dateRangeSelect.value === 'custom') {
                 // Find a non-custom option to revert to
                 const firstOption = dateRangeSelect.querySelector('option:not([value="custom"])');
                 if(firstOption) dateRangeSelect.value = firstOption.value;
            }
        };

        dateRangeSelect.addEventListener('change', () => {
            if (dateRangeSelect.value === 'custom') {
                // Set default dates
                const today = new Date();
                const yesterday = new Date(today);
                yesterday.setDate(yesterday.getDate() - 1);
                endDateInput.valueAsDate = yesterday;
                const thirtyDaysAgo = new Date(today);
                thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
                startDateInput.valueAsDate = thirtyDaysAgo;
                openDateModal();
            } else {
                // Handle non-custom selections (e.g., trigger data refresh)
                console.log(`Date range changed to: ${dateRangeSelect.value}`);
            }
        });

        closeDateModalButtons.forEach(button => {
            button.addEventListener('click', closeDateModal);
        });

        dateRangeModal.addEventListener('click', (event) => {
            if (event.target === dateRangeModal) {
                closeDateModal();
            }
        });

        quickSelectButtons.forEach(button => {
            button.addEventListener('click', () => {
                const days = parseInt(button.dataset.days, 10);
                const today = new Date();
                const endDate = new Date();
                const startDate = new Date();
                startDate.setDate(today.getDate() - days);
                
                startDateInput.valueAsDate = startDate;
                endDateInput.valueAsDate = endDate;
            });
        });

        thisYearButton.addEventListener('click', () => {
            const today = new Date();
            const year = today.getFullYear();
            const startDate = new Date(year, 0, 1);
            
            startDateInput.valueAsDate = startDate;
            endDateInput.valueAsDate = today;
        });

        applyDateRangeButton.addEventListener('click', () => {
            console.log(`Applying custom date range: ${startDateInput.value} to ${endDateInput.value}`);
            // Logic to refresh dashboard data with these dates would go here
            closeDateModal();
        });

    </script>
</body>
</html>


